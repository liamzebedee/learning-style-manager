<h1 class="page-header">New DOL5 learning test <small>(Dimensions of Learning)</small></h1>

<section class="test">
<%= form_for @dol5_test, url: {action: "create"} do |f| %>
	
	<%= f.fields_for :answers do |builder| %>
	<div class="questions">
		<% Dol5TestResult::QUESTIONS.each_with_index do |question,question_i| %>
			<div class="question">
				<h3><%= question %></h3>
			
				<% Dol5TestResult::OPTIONS.each_with_index do |option, option_i| %>
					<div class="radio">
						<%= builder.radio_button(question_i, option_i) %>
						<%= builder.label(question_i, option, value: option_i) %>
					</div>
				<% end %>
			</div>
		<% end %>
	</div>
	<% end %>
	<button class="btn btn-primary btn-lg" value="submit" name="commit" type="submit">Finish test</button>
<% end %>
</section>
