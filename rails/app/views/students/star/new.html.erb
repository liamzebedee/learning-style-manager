<h1 class="page-header">New STAR learning test <small>(Spacial Tactile Auditory Reading)</small></h1>
<span class="label label-primary"><%= StarTestResult::QUESTIONS.length %> questions</span>&nbsp;<span class="label label-info">Approx. <%= (StarTestResult::QUESTIONS.length * 8)/60 %> minutes</span>

<section class="test">
<%= form_for @star_test, url: {action: "create"}, html: {autocomplete: "off"} do |f| %>
	
	<%= f.fields_for :answers do |builder| %>
	<div class="questions">
		<% StarTestResult::QUESTIONS.each_with_index do |(question, options), question_i| %>
			<div class="question">
				<h3><%= question %></h3>
				
				<div class="options">
				<% options.each_with_index do |option, option_i| %>
					<div class="radio">
						<%= builder.radio_button(question_i, option_i, required: true) %>
						<%= builder.label(question_i, option, value: option_i) %>
					</div>
				<% end %>
				</div>
			</div>
		<% end %>
	</div>
	<% end %>
	<hr>
	<button class="btn btn-primary btn-lg" value="submit" name="commit" type="submit">Finish test</button>
<% end %>
</section>
